{
  "compilerOptions": {
    // Environment setup & latest features
    "lib": ["ESNext"],
    "target": "ESNext",
    "module": "Preserve",
    "moduleDetection": "force",
    "jsx": "react-jsx",
    "allowJs": true,

    // Bundler mode
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,

    // Best practices
    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,

    // Some stricter flags (disabled by default)
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noPropertyAccessFromIndexSignature": false,

    // Path aliases
    "paths": {
      // Infrastructure
      "@Configs/*": ["./src/Infrastructure/Configs/*"],
      "@Security/*": ["./src/Infrastructure/Security/*"],

      // Presentation
      "@Hubs/*": ["./src/Presentation/Sockets/Hubs/*"],
      "@Routers/*": ["./src/Presentation/Https/Routers/*"],
      "@Controllers/*": ["./src/Presentation/Https/Controllers/*"],
      "@Middlewares/*": ["./src/Presentation/Https/Middlewares/*"],
    }
  }
}
